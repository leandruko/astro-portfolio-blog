<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lensodev.</title>
    <link rel="icon" type="image/svg+xml" href="images/favicon.ico" />
  </head>
  <body class="font-sans antialiased bg-negro">
    <main class="relative z-0">
      <div class="absolute inset-0 z-0">
        <div id="particles-container" class="absolute inset-0"></div>
      </div>
      <div class="noise-overlay"></div>
      <slot />
    </main>

    <script>
      // Generador de part√≠culas simple
      const container = document.getElementById("particles-container");
      const particleCount = 20;

      for (let i = 0; i < particleCount; i++) {
        const p = document.createElement("div");
        p.className =
          "absolute text-[#ccff00] text-[8px] opacity-20 font-mono pointer-events-none";
        p.textContent = Math.random() > 0.5 ? "0" : "1";
        p.style.left = `${Math.random() * 100}%`;
        p.style.top = `${Math.random() * 100}%`;
        p.style.setProperty(
          "animation",
          `float-data ${5 + Math.random() * 10}s linear infinite`
        );
        p.style.setProperty("animation-delay", `${Math.random() * 5}s`);
        container?.appendChild(p);
      }
    </script>

    <style>
      @keyframes float-data {
        0% {
          transform: translateY(0);
          opacity: 0;
        }
        20% {
          opacity: 0.3;
        }
        80% {
          opacity: 0.3;
        }
        100% {
          transform: translateY(-100px);
          opacity: 0;
        }
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </body>
</html>


