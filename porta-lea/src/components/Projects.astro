---
// src/components/Projects.astro
import { projects } from '../data/project';
import ProjectCard from './ProjectCard.astro'; 

const profProjects = projects.filter(p => p.category === 'profesional');
const personalProjects = projects.filter(p => p.category === 'personal');
---

<section id="proyectos" class="py-24 bg-[#1e1e1e] relative overflow-hidden">

  <div class="max-w-6xl mx-auto px-6 relative z-10">
    
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-6">
      <div class="max-w-xl">
        <div class="flex items-center gap-3 mb-4">
        </div>
        <h2 class="text-5xl md:text-6xl font-bold text-[#e1dbc9] tracking-tighter">
          Proyectos<span class="text-[#E85A4F]">.</span>
        </h2>
      </div>

      <div class="flex bg-[#e1dbc9] p-1 rounded-full border border-[#D1CCBD]/50">
        <button 
          onclick="switchTab('profesional')" 
          id="tab-profesional"
          class="tab-btn active-tab"
        >
          Profesional
        </button>
        <button 
          onclick="switchTab('personal')" 
          id="tab-personal"
          class="tab-btn"
        >
          Laboratorio
        </button>
      </div>
    </div>

    <div class="relative min-h-[600px]">
      <div id="content-profesional" class="tab-content transition-all duration-500">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {profProjects.map(project => (
            <ProjectCard project={project} />
          ))}
        </div>
      </div>

      <div id="content-personal" class="tab-content hidden transition-all duration-500">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {personalProjects.map(project => (
            <ProjectCard project={project} />
          ))}
        </div>
      </div>
    </div>

    <div class="mt-12 pt-12 flex justify-center">
        <a href="https://github.com/leandruko" target="_blank" class="group flex items-center gap-3 font-mono text-2xl font-bold text-[#e1dbc9] hover:text-[#E85A4F] transition-colors">
          Explorar proyectos
          <span class="transform group-hover:translate-x-2 transition-transform">→</span>
        </a>
    </div>
  </div>
</section>

<style>
  /* Tabs con diseño de "Píldora" moderna */
  .tab-btn {
    @apply px-8 py-2.5 rounded-full font-mono text-[10px] uppercase font-bold tracking-widest transition-all duration-300 text-[#8E8D8A];
  }

  .active-tab {
    @apply bg-[#1A1A1A] text-[#e1dbc9] shadow-lg shadow-black/10;
  }

  .tab-content {
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<script is:inline>
  function switchTab(category) {
    document.querySelectorAll('.tab-content').forEach(c => c.classList.add('hidden'));
    document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active-tab'));

    const content = document.getElementById(`content-${category}`);
    const btn = document.getElementById(`tab-${category}`);
    
    if(content && btn) {
      content.classList.remove('hidden');
      btn.classList.add('active-tab');
    }
  }
</script>