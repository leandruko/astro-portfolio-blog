---
// src/components/Projects.astro
const webProjects = [
  {
    title: "Brosbusters",
    desc: "Landing page para Brosbusters podcast.",
    tags: ["Astro", "Tailwind", "JS"],
    img: "/images/brosbusters.png",
    link: "https://www.brosbusters.cl/"
  },
  {
    title: "Modo Piola Hub",
    desc: "Landing page con el fin de mostrar redes sociales.",
    tags: ["Astro", "Tailwind", "JS"],
    img: "/images/modopiola.png", 
    link: "https://www.modopiola.cl/"
  },
    {
    title: "Cimasur",
    desc: "Sistema creado con el fin de registrar informacion de logista en la empresa.",
    tags: ["DJANGO", "JS", "PYTHON", "POSTGRES"],
    img: "/images/cimasur.png", // Placeholder
  }
];

const dataProjects = [
  {
    title: "Análisis de sismos en Chile 2000-2024",
    desc: "Modelo de ML para predecir stock necesario basado en históricos de 5 años.",
        technologies: [
      "Python",
      "Pandas",
      "Seaborn",
      "Mathplotlib",
      "Scikit-learn",
    ],
    link: "https://github.com/leandruko/sismos-Chile"
  },
  {
    title: "Morosidad sistema financiero",
    desc: "NAnálisis de datos para predecir si alguien será deudor.",
        technologies: [
      "Python",
      "Pandas",
      "Seaborn",
      "Mathplotlib",
      "Scikit-learn",
      "Jupyter",
    ],
    link: "https://github.com/leandruko/Morosidad-Sistema-Financiero"
  },
    {
    title: "Cáncer de pulmón",
    desc: "Desarrollado con el objetivo de predecir si una persona tiene cáncer al pulmón.",
    technologies: [
      "Python",
      "Pandas",
      "Seaborn",
      "Mathplotlib",
      "Scikit-learn",
    ],
    link: "https://github.com/leandruko/lung-cancer"
  }
];
---

<section id="proyectos" class="w-full bg-paper text-ink py-20 px-4 md:px-8 border-b-4 border-ink relative">
    
    <div class="max-w-7xl mx-auto mb-16 border-b-4 border-ink pb-4">
        <h2 class="text-5xl md:text-7xl font-serif font-black uppercase tracking-tighter">
            SELECCIÓN DE <br/>
            <span class="text-frog-green">TRABAJOS</span>
        </h2>
    </div>

    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-0">
        
        <div class="md:pr-8 md:border-r-4 border-ink">
            <div class="flex items-center gap-4 mb-8">
                <h3 class="font-mono text-2xl font-bold bg-ink text-paper px-2 inline-block">
                    DESARROLLO_WEB
                </h3>
            </div>

            <div class="space-y-12">
                {webProjects.map((project, index) => (
                    <article class="group relative">
                        <div class="border-4 border-ink bg-paper relative z-10 transition-transform duration-300 group-hover:-translate-y-2 group-hover:-translate-x-2">
                            
                            <div class="w-full h-48 overflow-hidden border-b-4 border-ink relative">
                                <div class="absolute inset-0 bg-frog-green mix-blend-multiply opacity-20 group-hover:opacity-0 transition-opacity z-10 pointer-events-none"></div>
                                <img 
                                    src={project.img} 
                                    alt={project.title} 
                                    class="w-full h-full object-cover grayscale contrast-125 group-hover:grayscale-0 transition-all duration-500"
                                />
                            </div>

                            <div class="p-6">
                                <h4 class="font-serif text-2xl font-bold mb-2 leading-none">{project.title}</h4>
                                <p class="font-mono text-sm text-ink/70 mb-4">{project.desc}</p>
                                
                                <div class="flex flex-wrap gap-2 mb-4">
                                    {project.tags.map(tag => (
                                        <span class="text-xs font-mono border border-ink px-1 rounded-sm uppercase">{tag}</span>
                                    ))}
                                </div>

                                <a href={project.link} target="_blank" class="inline-block text-sm font-bold border-b-2 border-stamp-red text-stamp-red hover:bg-stamp-red hover:text-paper transition-colors">
                                    VER PROYECTO ->
                                </a>
                            </div>
                        </div>

                        <div class="absolute top-0 left-0 w-full h-full bg-ink z-0 translate-x-0 translate-y-0"></div>
                    </article>
                ))}
            </div>
        </div>

        <div class="md:pl-8 pt-12 md:pt-0 border-t-4 md:border-t-0 border-ink">
             <div class="flex items-center gap-4 mb-8">
                <h3 class="font-mono text-2xl font-bold bg-frog-green text-paper px-2 inline-block">
                    DATA_SCIENCE
                </h3>
            </div>

            <div class="space-y-6">
                {dataProjects.map((project) => (
                    <article class="relative block group">
                        <div class="border-2 border-ink p-6 bg-[url('https://www.transparenttextures.com/patterns/graphy.png')] hover:bg-white transition-colors">
                            
                            <div class="flex justify-between items-start mb-4 border-b-2 border-ink/20 pb-2">
                                <h4 class="font-serif text-xl font-bold">{project.title}</h4>
                                <span class="text-2xl text-frog-green">★</span>
                            </div>

                            <p class="font-mono text-sm mb-4">{project.desc}</p>
                            
                            <div class="bg-ink/5 p-2 border-l-4 border-frog-green mb-4">
                            {project.technologies.map(tag => (
                                        <span class="text-xs font-mono border border-ink px-1 rounded-sm uppercase">{tag}</span>
                                    ))}
                            </div>

                            <a href={project.link} target="_blank" class="text-xs font-mono uppercase tracking-widest hover:underline group-hover:text-frog-green">
                                [Explorar Notebook]
                            </a>
                        </div>
                    </article>
                ))}
                
                <div class="mt-12 p-4 border border-dashed border-ink opacity-50 font-mono text-xs text-center hidden md:block">
                    // ANALYTICS STATUS: READY <br/>
                    [||||||||||||||||||||] 100%
                </div>
            </div>
        </div>

    </div>
</section>