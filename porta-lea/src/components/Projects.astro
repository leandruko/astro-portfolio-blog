---
// src/components/Projects.astro
import { projects } from '../data/project';
import ProjectCard from './ProjectCard.astro'; 

const profProjects = projects.filter(p => p.category === 'profesional');
const personalProjects = projects.filter(p => p.category === 'personal');
---

<section id="proyectos" class="py-20 bg-[#e7e2d8] relative overflow-hidden">
  <div class="absolute inset-0 opacity-[0.15] pointer-events-none" style="background-image: url('https://www.transparenttextures.com/patterns/p6.png');"></div>

  <div class="max-w-6xl mx-auto px-6 relative z-10">
    
    <div class="inline-block bg-[#403b33] text-[#e7e2d8] px-4 md:px-6 py-2 mb-12 shadow-[6px_6px_0px_0px_rgba(142,141,138,0.3)] border-2 border-black max-w-full">
      <h2 class="text-2xl md:text-5xl font-black tracking-tighter font-mono uppercase">
        Explorar_Proyectos
      </h2>
    </div>

    <div class="flex flex-wrap gap-1 mb-0 ml-1">
      <button 
        onclick="switchTab('profesional')" 
        id="tab-profesional"
        class="tab-btn active-tab"
      >
        [PROYECTOS_PRO]
      </button>
      <button 
        onclick="switchTab('personal')" 
        id="tab-personal"
        class="tab-btn"
      >
        [LAB_PERSONAL]
      </button>
    </div>

    <div class="border-[3px] border-[#403b33] bg-[#d1ccbd]/30 p-6 md:p-10 shadow-[10px_10px_0px_0px_rgba(64,59,51,0.1)]">
      
      <div id="content-profesional" class="tab-content">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
          {profProjects.map(project => (
            <div class="hover:translate-y-[-8px] transition-all duration-300">
               <ProjectCard project={project} />
            </div>
          ))}
        </div>
      </div>

      <div id="content-personal" class="tab-content hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
          {personalProjects.map(project => (
            <div class="hover:translate-y-[-8px] transition-all duration-300">
               <ProjectCard project={project} />
            </div>
          ))}
        </div>
      </div>

    </div>

    <div class="mt-24 max-w-2xl mx-auto text-center">
        <a href="https://github.com/leandruko" target="_blank" class="group inline-flex items-center px-8 py-4 bg-[#403b33] text-[#e7e2d8] border-2 border-black font-mono font-black text-lg uppercase transition-all hover:bg-[#2e2a24] hover:shadow-[6px_6px_0px_0px_#8e8d8a]">
          VER_GITHUB_COMPLETO.LOG
        </a>
    </div>
  </div>
</section>

<style>
  .tab-btn {
    @apply px-6 py-3 font-mono font-bold text-xs md:text-sm transition-all border-t-2 border-x-2 border-[#403b33] bg-[#d1ccbd] text-[#403b33]/60 rounded-t-lg;
  }

  .active-tab {
    @apply bg-[#403b33] text-[#e7e2d8] border-b-0;
    transform: translateY(3px); /* Hace que parezca que la pesta√±a se une al contenedor */
  }

  .tab-content {
    animation: fadeIn 0.4s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<script is:inline>
  function switchTab(category) {
    // Ocultar todos los contenidos
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.add('hidden');
    });
    
    // Quitar estado activo de todos los botones
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.classList.remove('active-tab');
    });

    // Mostrar el seleccionado
    document.getElementById(`content-${category}`).classList.remove('hidden');
    document.getElementById(`tab-${category}`).classList.add('active-tab');
  }
</script>