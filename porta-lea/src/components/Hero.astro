---
// Hero.astro
---

<section class="min-h-[120vh] flex flex-col items-center justify-start bg-[#e7e2d8] px-6 font-mono selection:bg-[#403b33] selection:text-[#eae7dc] relative pt-32 transition-colors duration-500">
  
  <div class="absolute inset-0 pointer-events-none opacity-[0.2] z-10" style="background-image: url('https://www.transparenttextures.com/patterns/p6.png');"></div>

  <div class="absolute inset-0 pointer-events-none opacity-[0.08] z-10" style="background-image: radial-gradient(#403b33 1px, transparent 1px); background-size: 40px 40px;"></div>

  <div class="absolute inset-0 pointer-events-none">
    <div class="sticky top-40 ml-10 hidden lg:flex flex-col items-center gap-2 w-fit pointer-events-auto group cursor-help">
      <div class="absolute inset-0 bg-[#d8c3a5]/20 translate-x-2 translate-y-2 -z-10 group-hover:bg-[#d8c3a5]/40 transition-colors"></div>
      <div class="border-2 border-[#403b33] bg-[#d1ccbd] p-4 shadow-[4px_4px_0px_0px_rgba(64,59,51,0.2)] group-hover:border-black transition-all">
        <span class="text-4xl grayscale group-hover:grayscale-0 transition-all">üìÅ</span>
        <p class="text-[9px] text-[#403b33] mt-2 font-bold uppercase tracking-tighter italic">Proyectos.arc</p>
      </div>
    </div>

    <div class="sticky top-60 mr-10 hidden lg:flex flex-col items-center gap-2 w-fit pointer-events-auto float-right group cursor-grab active:cursor-grabbing">
      <div class="absolute inset-0 bg-[#403b33]/10 translate-x-2 translate-y-2 -z-10"></div>
      <div class="border-2 border-[#403b33] bg-[#d1ccbd] p-4 shadow-[4px_4px_0px_0px_rgba(64,59,51,0.2)] group-hover:scale-105 transition-transform">
        <span class="text-4xl grayscale group-hover:grayscale-0 transition-all">üíæ</span>
        <p class="text-[9px] text-[#403b33] mt-2 font-black uppercase tracking-widest italic">Save_Data</p>
      </div>
    </div>
  </div>

  <div class="relative w-full max-w-5xl z-20 flex flex-col items-center text-center">
    <div class="p-4 md:p-10 relative w-full">
      
      <div class="mb-6">
          <h1 class="text-5xl sm:text-8xl md:text-[7.5rem] font-bold text-[#403b33] leading-[0.8] tracking-tighter transition-transform cursor-default font-mono">
              <span class="text-[#8e8d8a] opacity-80 block text-2xl md:text-4xl mb-4 lowercase tracking-normal italic"> > whoami_session </span>
              Leandro <br/> 
              <span class="text-transparent" style="-webkit-text-stroke: 2px #8e8d8a;">Soto</span>
              <br/>
              <span class="text-transparent" style="-webkit-text-stroke: 2px #8e8d8a;">Miranda</span>
          </h1>
      </div>

      <div class="flex justify-center">
        <p class="text-lg md:text-2xl text-[#403b33]/80 max-w-2xl mb-16 leading-tight border-2 border-dashed border-[#8e8d8a] p-8 opacity-0 animate-[fadeIn_0.8s_ease-out_0.3s_forwards] font-mono bg-[#d1ccbd]/40 backdrop-blur-sm shadow-inner">
            <span class="text-[#403b33] font-bold">#</span> ingenier√≠a_de_datos <br class="hidden md:block"/> 
            <span class="text-[#403b33] font-bold">#</span> desarrollo_web_funcional
        </p>
      </div>

      <div class="flex flex-wrap gap-6 items-center justify-center opacity-0 animate-[fadeIn_1s_ease-out_0.6s_forwards]">
        <a href="#proyectos" class="group relative inline-block">
          <span class="relative z-10 px-12 py-5 bg-[#403b33] text-[#e7e2d8] font-black uppercase text-base md:text-xl flex items-center gap-4 group-hover:bg-[#2e2a24] transition-all border-2 border-black">
            EXPLORAR_PROYECTOS.SH
            <span class="text-2xl group-hover:translate-x-3 transition-transform">_</span>
          </span>
          <div class="absolute inset-0 translate-x-3 translate-y-3 bg-[#8e8d8a] -z-0 group-hover:translate-x-1 group-hover:translate-y-1 transition-all"></div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap');

  .font-mono {
    font-family: 'Roboto Mono', monospace;
  }

  /* Animaci√≥n de flotaci√≥n */
  @keyframes stickerFloat {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-12px) rotate(1deg); }
  }

  .sticky {
    animation: stickerFloat 6s ease-in-out infinite;
  }

  @keyframes fadeIn {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  @media (max-width: 768px) {
    h1 {
        font-size: 3.5rem;
        line-height: 0.95;
    }
    h1 span {
      -webkit-text-stroke: 1.5px #8e8d8a !important;
    }
  }
</style>