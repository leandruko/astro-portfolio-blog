---
// src/components/ProjectCard.astro
interface Props {
  project: {
    id: string;
    title: string;
    image: string;
    technologies: string[];
    githubUrl: string;
    demoUrl?: string;
  };
}

const { project } = Astro.props;
---

<article class="bg-smoke-950 rounded-lg shadow-lg overflow-hidden flex flex-col h-full hover:shadow-xl transform hover:-translate-y-1 transition duration-300 ease-in-out">
  <img
    src={project.image}
    alt={`Miniatura del proyecto ${project.title}`}
    class="w-full h-48 object-cover"
    loading="lazy"
  />
  <div class="p-6 flex-grow flex flex-col">
    <h3 class="text-2xl font-bold text-verde mb-2 font-mono">{project.title}</h3>
    <div class="flex flex-wrap gap-2 mb-6">
      {project.technologies.map(tech => (
        <span class="bg-verde text-negro text-sm px-3 py-1 rounded-full font-semibold">
          {tech}
        </span>
      ))}
    </div>
    <div class="flex justify-start gap-3 mt-auto">
      <a
        href={project.githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-4 py-2 border-2 border-verde text-verde rounded-lg hover:text-negro hover:bg-verde transition duration-300 text-lg font-semibold font-mono"
      >
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017 2 16.216 4.672 19.743 8.309 20.982c.5.094.68-.22.68-.485 0-.237-.008-.865-.013-1.698-2.69.586-3.253-1.3-3.253-1.3-.44-1.116-1.07-1.413-1.07-1.413-.876-.59.066-.58.066-.58.97.067 1.488.995 1.488.995.86 1.486 2.27 1.056 2.82.806.085-.628.337-1.056.617-1.295-2.15-.24-4.416-1.075-4.416-4.79 0-1.06.377-1.925 1-2.608-.1-.24-.435-1.238.096-2.573 0 0 .81-.26 2.642.987.77-.215 1.58-.322 2.39-.327.81.005 1.62.112 2.39.327 1.832-1.247 2.64-1 2.64-1 .53 1.335.2 2.333.1 2.573.623.683 1 1.548 1 2.608 0 3.722-2.27 4.545-4.425 4.786.357.307.678.915.678 1.855 0 1.336-.012 2.417-.012 2.748 0 .268.18.58.688.484C19.333 19.73 22 16.208 22 12.017 22 6.484 17.522 2 12 2Z" clip-rule="evenodd" />
        </svg>
        GitHub
      </a>
      {project.demoUrl && (
        <a
          href={project.demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 border-2 bg-verde text-negro rounded-lg transition duration-200 text-xl font-semibold shadow-xl font-mono border-verde hover:bg-negro hover:text-verde"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Ver Demo
        </a>
      )}
    </div>
  </div>
</article>