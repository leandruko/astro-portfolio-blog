                <div class="w-16 h-16 rounded-full border-2 border-ink flex items-center justify-center bg-frog-green text-paper mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
                        <path stroke-linecap="square" stroke-linejoin="miter" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5" />
                    </svg>
                </div>

                <div class="space-y-2 w-full">
                    <h3 class="font-mono text-sm uppercase text-ink/60 tracking-widest">Correo Electrónico</h3>
                    <p id="email-text" class="font-serif text-xl md:text-3xl font-bold text-ink break-all select-all">
                        {email}
                    </p>
                </div>

                <button 
                    id="copy-btn" 
                    data-email={email}
                    class="w-full md:w-auto px-8 py-4 bg-stamp-red text-paper font-mono font-bold border-2 border-ink hover:bg-paper hover:text-stamp-red hover:border-stamp-red transition-all uppercase shadow-[4px_4px_0px_#18181B] active:shadow-none active:translate-x-[4px] active:translate-y-[4px] cursor-pointer"
                >
                    COPIAR EMAIL :)
                </button>
            </div>
        </div>

    </div>
</section>

<script>
    const copyBtn = document.getElementById('copy-btn');
    const emailText = document.getElementById('email-text');

    if (copyBtn) {
        copyBtn.addEventListener('click', async () => {
            const email = copyBtn.dataset.email;
            
            try {
                await navigator.clipboard.writeText(email);
                
                // Feedback visual: Cambiar texto y color
                const originalText = copyBtn.innerText;
                const originalBg = copyBtn.classList.contains('bg-stamp-red');
                
                copyBtn.innerText = "¡COPIADO!";
                copyBtn.classList.remove('bg-stamp-red', 'text-paper');
                copyBtn.classList.add('bg-frog-green', 'text-paper', 'border-frog-green');

                // Restaurar después de 2 segundos
                setTimeout(() => {
                    copyBtn.innerText = originalText;
                    copyBtn.classList.remove('bg-frog-green', 'border-frog-green');
                    copyBtn.classList.add('bg-stamp-red');
                }, 2000);

            } catch (err) {
                console.error('Error al copiar: ', err);
                copyBtn.innerText = "ERROR";
            }
        });
    }
</script>