<div class="hidden md:block h-14"></div>

<script>
  function updateClock() {
    const now = new Date();
    const clock = document.getElementById('desktop-clock');
    if (clock) {
      clock.textContent = now.toLocaleTimeString('en-US', { 
        hour: '2-digit', 
        minute: '2-digit',
        hour12: false 
      });
    }
  }
  setInterval(updateClock, 1000);
  updateClock();

  const navItemsMobile = document.querySelectorAll('.nav-item-mobile');
  const navLinksDesktop = document.querySelectorAll('.nav-link-desktop');

  function setActiveSection() {
    const sections = document.querySelectorAll('section[id]');
    let currentSection = '';

    sections.forEach(section => {
      const sectionTop = (section as HTMLElement).offsetTop;
      if (window.scrollY >= sectionTop - 150) {
        currentSection = section.getAttribute('id') || '';
      }
    });

    navItemsMobile.forEach(item => {
      if (item.getAttribute('href')?.substring(1) === currentSection) {
        item.classList.add('active-mobile');
      } else {
        item.classList.remove('active-mobile');
      }
    });

    navLinksDesktop.forEach(link => {
      if (link.getAttribute('href')?.substring(1) === currentSection) {
        link.classList.add('active-desktop');
      } else {
        link.classList.remove('active-desktop');
      }
    });
  }

  window.addEventListener('scroll', setActiveSection);
  setActiveSection();
</script>

<style>

  .nav-link-desktop {
    @apply px-4 py-2 text-xs font-black text-white/50 uppercase transition-all border-b-4 border-transparent hover:text-[#ccff00] hover:bg-white/5;
  }
  .active-desktop {
    @apply text-[#ccff00] border-[#ccff00] bg-white/5;
  }

  .nav-item-mobile {
    @apply flex flex-col items-center justify-center w-20 py-1 border-2 border-transparent transition-all grayscale opacity-40 text-white;
  }
  .active-mobile {
    @apply grayscale-0 opacity-100 border-[#ccff00] bg-[#ccff00]/10 text-[#ccff00] shadow-[0_0_15px_rgba(204,255,0,0.2)];
  }

  header, nav {
    -webkit-font-smoothing: none;
  }
</style>