---
// src/components/Navbar.astro
---

<header class="hidden md:block fixed top-0 left-0 right-0 z-50 w-full bg-[#1e1e1e]/80 backdrop-blur-md font-sans transition-all duration-300">
  <nav class="max-w-7xl mx-auto flex items-center justify-between px-8 py-4">
    
    <div class="flex items-center gap-4">
      <a href="/" class="group flex items-center gap-2">
        <span class="w-2 h-2 bg-[#E85A4F] rounded-full group-hover:scale-150 transition-transform"></span>
        <span class="font-bold text-lg tracking-tighter text-[#e1dbc9] uppercase">lensodev.</span>
      </a>
    </div>

    <div class="flex items-center gap-8">
      <a class="nav-link-desktop" href="#proyectos">Proyectos</a>
      <a class="nav-link-desktop" href="#contacto">Contacto</a>
      
      <div class="h-4 w-[1px] bg-[#D1CCBD]"></div>

      <div class="flex items-center gap-3 text-[#8E8D8A] font-mono text-[11px] font-bold uppercase tracking-widest">
        <span id="desktop-clock">00:00</span>
        <div class="w-6 h-6 flex items-center justify-center bg-[#F3F0E8] rounded-md border border-[#D1CCBD]/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </nav>
</header>

<nav class="md:hidden fixed bottom-6 left-1/2 -translate-x-1/2 z-50 w-[90%] max-w-sm">
  <div class="bg-[#1A1A1A]/90 backdrop-blur-xl border border-white/10 rounded-2xl p-2 shadow-2xl flex items-center justify-around">
    
    <a href="#proyectos" class="nav-item-mobile" data-section="proyectos">
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
      </svg>
      <span class="text-[9px] font-bold uppercase tracking-tighter">Proyectos</span>
    </a>

    <div class="w-[1px] h-8 bg-white/10"></div>

    <a href="#contacto" class="nav-item-mobile" data-section="contacto">
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      <span class="text-[9px] font-bold uppercase tracking-tighter">Contacto</span>
    </a>

  </div>
</nav>

<div class="hidden md:block h-20"></div>

<script>
  function updateClock() {
    const now = new Date();
    const clock = document.getElementById('desktop-clock');
    if (clock) {
      clock.textContent = now.toLocaleTimeString('en-US', { 
        hour: '2-digit', 
        minute: '2-digit',
        hour12: false 
      });
    }
  }
  setInterval(updateClock, 1000);
  updateClock();

  // LÃ³gica de Scroll Activo
  const navItemsMobile = document.querySelectorAll('.nav-item-mobile');
  const navLinksDesktop = document.querySelectorAll('.nav-link-desktop');

  function setActiveSection() {
    const sections = document.querySelectorAll('section[id]');
    let currentSection = '';

    sections.forEach(section => {
      const sectionTop = (section as HTMLElement).offsetTop;
      if (window.scrollY >= sectionTop - 150) {
        currentSection = section.getAttribute('id') || '';
      }
    });

    navItemsMobile.forEach(item => {
      if (item.getAttribute('href')?.substring(1) === currentSection) {
        item.classList.add('active-mobile');
      } else {
        item.classList.remove('active-mobile');
      }
    });

    navLinksDesktop.forEach(link => {
      if (link.getAttribute('href')?.substring(1) === currentSection) {
        link.classList.add('active-desktop');
      } else {
        link.classList.remove('active-desktop');
      }
    });
  }

  window.addEventListener('scroll', setActiveSection);
  setActiveSection();
</script>

<style>
  /* Desktop Links */
  .nav-link-desktop {
    @apply text-xs text-[#e1dbc9]/30 uppercase tracking-widest transition-all duration-300 hover:text-[#e1dbc9] relative py-2;
  }
  .active-desktop {
    @apply text-[#1A1A1A];
  }
  .active-desktop::after {
    content: '';
    @apply absolute bottom-0 left-0 w-full h-[2px] bg-[#E85A4F];
    animation: scaleIn 0.3s ease-out;
  }

  /* Mobile Items */
  .nav-item-mobile {
    @apply flex flex-col items-center justify-center py-2 px-6 transition-all duration-300 text-white/40;
  }
  .active-mobile {
    @apply text-[#E85A4F] scale-110;
  }

  @keyframes scaleIn {
    from { transform: scaleX(0); }
    to { transform: scaleX(1); }
  }
</style>